@model SitecoreDiser.Feature.ContentReport.Models.ReportContentModel

@if (Model != null)
{
    <div class="container cr-container">
        <div class="cr-nav-bar bg-light">
            <label>Content Report</label>
        </div>
        <div class="c-wrapper center">
            <div class="row center">
                <div class="col-md-6">
                    <label class="py-3">Start Date</label>
                    <input id="fromdate" type="text" data-provide="datepicker">
                </div>
                <div class="col-md-6">
                    <label class="py-3">End Date</label>
                    <input id="todate" type="text" data-provide="datepicker">
                </div>
            </div>
            <div class="row center w-50-pr">
                <div class=center w-50-pr">
                    <button id="generate-report" title="@Model.SearchText" class="btn btn-success" onclick="generateReport(this);">@Model.SearchText</button>
                </div>
            </div>
        </div>

        <div id="tabcontainer" class="tab-container">
            <ul class="nav nav-tabs">
                @foreach (var tab in Model.Tabs)
                {
                    if (!string.IsNullOrWhiteSpace(@tab.Name))
                    {
                        int index = Model.Tabs.IndexOf(tab);
                        <li class="@(index == 0 ? "active" : "")">
                            <a href="#tab-@tab.Name.Replace(" ", "")" data-toggle="tab">@tab.Name</a>
                        </li>
                    }
                }
            </ul>

            <div class="tab-content cr-tab">
                @for (int i = 0; i < Model.Tabs.Count; i++)
                {
                    <div class="tab-pane @(i == 0 ? "active" : "")" id="tab-@Model.Tabs[i].Name.Replace(" ", "")">
                        <div class="tab-content">
                            @if (Model.Tabs[i].Name.ToLower().Contains("summary"))
                            {

                            }
                            else
                            {
                                <table id="dt-tab-@Model.Tabs[i].Name.Replace(" ", "")" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                                    <thread>
                                        <tr>
                                            <th>Id</th>
                                            <th>Name</th>
                                            <th>Path</th>
                                            <th>User</th>
                                            <th>Version</th>
                                            <th>Language</th>
                                        </tr>
                                    </thread>
                                </table>

                                if (!string.IsNullOrEmpty(Model.Tabs[i].DownloadText) && Model.Tabs[i].Type != "Summary")
                                {
                                    <button id="btn-@Model.Tabs[i].Name" title="@Model.Tabs[i].DownloadText" class="btn btn-success" onclick="processDownload(this, '@Model.Tabs[i].Name')">@Model.Tabs[i].DownloadText</button>
                                }
                            }

                        </div>
                    </div>
                }

            </div>
        </div>
    </div>

}