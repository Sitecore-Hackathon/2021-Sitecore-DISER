@model SitecoreDiser.Feature.ContentReport.Models.ContentReportModel

@if (Model != null)
{
    <div class="wf-container">
        <div class="wf-content c-wrapper">
            <div class="row">
                <input id="fromdate" type="text" data-provide="datepicker" class="form-control">
                <input id="todate" type="text" data-provide="datepicker" class="form-control">
            </div>
        </div>
    </div>
    <button id="search-report" title="@Model.SearchText">@Model.SearchText</button>

    <div id="tabcontainer" class="tab-container">
        <ul class="nav nav-tabs">
            @foreach (var tab in Model.Tabs)
            {
                if (!string.IsNullOrWhiteSpace(@tab.Name))
                { 
                    <li>
                        <a href="#tab-@tab.Name.Replace(" ", "")" data-toggle="tab">@tab.Name</a>
                    </li>
                }
            }
        </ul>

        <div class="tab-content">
            @for (int i = 0; i < Model.Tabs.Count; i++)
            {
                <div class="tab-pane @(i == 0 ? "active" : "")" id="tab-@Model.Tabs[i].Name.Replace(" ", "")">
                    <div class="tab-content">
                        @if (Model.Tabs[i].Name.ToLower().Contains("summary"))
                        {

                        }
                        else
                        {
                            <table id="dt-tab-@Model.Tabs[i].Name.Replace(" ", "")" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                                <thread>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Path</th>
                                        <th>User</th>
                                        <th>Version</th>
                                        <th>Language</th>
                                    </tr>
                                </thread>
                            </table>

                            if (!string.IsNullOrEmpty(Model.Tabs[i].DownloadText))
                            {
                                <button id="tab-download" title="@Model.Tabs[i].DownloadText">@Model.Tabs[i].DownloadText</button>
                            }
                        }

                    </div>
                </div>
            }

        </div>
    </div>
}

<button id="download-button" title="Download">Download</button>
