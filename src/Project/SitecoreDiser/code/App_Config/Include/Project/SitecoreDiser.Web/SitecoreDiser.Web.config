<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
    <sitecore role:require="Standalone or ContentManagement">
        <unicorn>
            <configurations>
                <configuration name="Project.SitecoreDiser.Web" description="SitecoreDiser content" dependencies="Foundation.*,Feature.*" extends="Helix.Project">
                    <targetDataStore physicalRootPath="$(sourceFolder)\$(layer)\$(module)\serialization" useDataCache="false" singleInstance="true"/>
                    <predicate>
                        
                        <!-- Layouts -->
                        <include name="Layouts.Project" database="master" path="/sitecore/layout/layouts/Project/SitecoreDiser">
                            <exclude children="true" />
                        </include>

                        <!-- Placeholder Settings -->
                        <include name="PlaceholderSettings.Project" database="master" path="/sitecore/layout/placeholder settings/Project/SitecoreDiser">
                            <exclude children="true" />
                        </include>

                    </predicate>
                </configuration>
            </configurations>
        </unicorn>
    </sitecore>
</configuration>
